{{#if updateQuestionFormBool}}
<p>Update {{question.author}}'s post</p>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id=author placeholder=question.author}}
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      {{input value=content id=content placeholder=question.content}}
    </div>
    <div class="form-group">
      <label for="notes">Notesr</label>
      {{input value=notes id=notes placeholder=question.notes}}
    </div>

    <button {{action 'update' question}} class="btn btn-warning">Save</button>
  </form>
</div>
{{else}}
<button {{action 'updateQuestionFormAction'}} class="btn btn-warning">Update</button>
{{/if}}
